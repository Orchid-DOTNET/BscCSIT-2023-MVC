@model IEnumerable<MVCCRUD.Models.Student>

@{
    ViewData["Title"] = "StudentList";
}

<h1>StudentList</h1>

<p class="md-float-right">
    <a asp-action="Create" class="btn btn-outline-success">Add New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Section)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Section)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.Id, item.Name, item.Section, item.Description }, new {@class="btn btn-outline-primary"}) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new {@class="btn btn-outline-danger", onclick="return confirm('Do you want to delete the list?')"})
                </td>
        </tr>
}
    </tbody>
</table>

<script></script>
